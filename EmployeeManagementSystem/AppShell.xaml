<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EmployeeManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EmployeeManagementSystem"
    FlyoutBehavior="Locked"
    FlyoutWidth="220">

    <!-- Content for LoginView -->
    <ShellContent ContentTemplate="{DataTemplate local:LoginView}" Route="LoginView" />

    <!-- FlyoutItems for other views -->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Dashboard" Icon="dashboard.png" ContentTemplate="{DataTemplate local:DashboardView}" />
        <ShellContent Title="Manage Employee" Icon="employee.png" ContentTemplate="{DataTemplate local:ManageEmployeeView}" />
        <ShellContent Title="Manage Pay" Icon="pay.png" ContentTemplate="{DataTemplate local:ManagePayView}" />
        <ShellContent Title="Schedule" Icon="schedule.png" ContentTemplate="{DataTemplate local:ScheduleView}" />
    </FlyoutItem>

</Shell>
