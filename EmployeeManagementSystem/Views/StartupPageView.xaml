<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagementSystem.StartupPageView"
             >
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the Employee Management System"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Padding="20" />
        <Image 
            Source="logo.png"
            HeightRequest="100"
            WidthRequest="100"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="20"/>

        <!--Text is bound to username-->
        <Entry
            Placeholder="Username"
            VerticalOptions="Center"
            WidthRequest="250"/>

        <!--Text is bound to password-->
        <Entry
            Placeholder="Password"
            IsPassword="True"
            VerticalOptions="Center"
            WidthRequest="250"
            Margin="10"/>
        <Button
            Text="Login"
            Clicked="OnLoginButtonClicked"
            VerticalOptions="Center"
            WidthRequest="250"
            />
    </VerticalStackLayout>
</ContentPage>